<Window x:Class="PL.Call.ChooseCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:PL.Converters"
        Title="Choose Call for Treatment" Height="700" Width="900"
        >
    <Window.Resources>
        <conv:EmptyListToVisibilityConverter x:Key="EmptyListToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- כותרת -->
        <TextBlock Text="Open Calls in Your Area" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- מסננים -->
        <StackPanel Orientation="Horizontal" Margin="0,40,0,10">
            <TextBlock Text="Filter by Call Type:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox ItemsSource="{Binding CallTypeOptions}" SelectedItem="{Binding SelectedFilterType, Mode=TwoWay}" 
                      SelectionChanged="Filter_Changed" Width="150" Margin="0,0,20,0"/>

            <TextBlock Text="Sort by:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox ItemsSource="{Binding SortFieldOptions}" SelectedItem="{Binding SelectedSortField, Mode=TwoWay}" 
                      SelectionChanged="Filter_Changed" Width="150"/>

            <Button Content="Update Address" Click="UpdateAddress_Click" Margin="20,0,0,0"/>
        </StackPanel>

        <!-- טבלת קריאות -->
        <DataGrid ItemsSource="{Binding CallsList}" AutoGenerateColumns="False" Grid.Row="1" IsReadOnly="True"
                  SelectionChanged="DataGrid_SelectionChanged"  PreviewMouseLeftButtonDown="DataGrid_PreviewMouseLeftButtonDown">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Call Type" Binding="{Binding CallTypes}"/>
                <DataGridTextColumn Header="Address" Binding="{Binding Address}"/>
                <DataGridTextColumn Header="Distance (km)" Binding="{Binding CallDistance}"/>
                <DataGridTemplateColumn Header="Assign">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Assign" Click="ChooseCall_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <GroupBox Header="Call Details" Grid.Row="2" Margin="0,10,0,0">
            <TextBlock Text="{Binding SelectedCallDescription}" TextWrapping="Wrap" Height="80" Margin="5"/>
        </GroupBox>
    </Grid>
</Window>
