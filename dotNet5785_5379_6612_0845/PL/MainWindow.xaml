<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800"
        Loaded="MainWindow_Loaded"
 Closed="MainWindow_Closed"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- אזור שעון המערכת -->
            <RowDefinition Height="Auto"/>
            <!-- אזור משתני תצורה -->
            <RowDefinition Height="*"/>
            <!-- אזור כפתורי ניווט ופעולות -->
        </Grid.RowDefinitions>

        <!-- אזור שעון המערכת -->
        <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Label שמציג את השעה הנוכחית -->
                <Label Grid.Row="0" Content="{Binding CurrentTime}" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" />

                <!-- Grid עם כפתורי קידום זמן -->
                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Add One Minute" Click="btnAddOneMinute_Click" Grid.Column="0" Margin="5" Padding="10,5"/>
                    <Button Content="Add One Hour" Click="btnAddOneHour_Click" Grid.Column="1" Margin="5" Padding="10,5"/>
                    <Button Content="Add One Day" Click="btnAddOneDay_Click" Grid.Column="2" Margin="5" Padding="10,5"/>
                    <Button Content="Add One Year" Click="btnAddOneYear_Click" Grid.Column="3" Margin="5" Padding="10,5"/>
                </Grid>
            </Grid>
        </Border>

        <!-- אזור משתני תצורה -->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
            <Grid>
                <!--  <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBox Grid.Row="0" Text="hi!" Width="200" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                 <Button Grid.Row="1" Content="עדכן משתנה תצורה" Width="200" HorizontalAlignment="Center" Click="UpdateConfigButton_Click"/>-->
                <StackPanel>
                    <TextBox Width="200" Margin="10">
                        <TextBox.Text>
                            <Binding Path="MaxYearRange"
                     Mode="TwoWay"
                     UpdateSourceTrigger="PropertyChanged"
                     RelativeSource="{RelativeSource AncestorType=Window}" />
                        </TextBox.Text>
                    </TextBox>

                    <Button Content="עדכן משתנה תצורה"
            Width="200"
            HorizontalAlignment="Center"
            Click="UpdateConfigButton_Click"/>
                </StackPanel>

            </Grid>
        </Border>

        <!-- אזור כפתורי פעולות -->
        <Grid Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Content="הצג רשימה" Width="200" Margin="0,5"/>
            <Button Grid.Row="1" Content="אתחול בסיס נתונים" Width="200" Margin="0,5"/>
            <Button Grid.Row="2" Content="איפוס בסיס נתונים" Width="200" Margin="0,5"/>
        </Grid>
        <StackPanel Margin="20,144,20,10" Grid.Row="2">

            <!-- כפתור לפתיחת תצוגת קורסים -->
            <!-- Button to open course list screen -->
            <Button Content="Handle Courses" Click="btnCourses_Click" Margin="5"/>

            <!-- כפתור לאתחול בסיס הנתונים -->
            <!-- Button to initialize database -->
            <Button Content="Initialize DB" Click="btnInitializeDB_Click" Margin="5"/>

            <!-- כפתור לאיפוס בסיס הנתונים -->
            <!-- Button to reset database -->
            <Button Content="Reset DB" Click="btnResetDB_Click" Margin="5"/>

        </StackPanel>

    </Grid>
</Window>
