<Window x:Class="PL.ChooseScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="בחירת מסך" Height="150" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock Text="לאיזה מסך תרצה להיכנס?" 
                   FontWeight="Bold" FontSize="14" 
                   TextAlignment="Center" Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="מסך ניהול" Width="100" Margin="5" Click="ManagerButton_Click"/>
            <Button Content="מסך מתנדב" Width="100" Margin="5" Click="VolunteerButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
