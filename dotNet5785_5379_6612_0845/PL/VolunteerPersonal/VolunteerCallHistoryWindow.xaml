<Window x:Class="PL.VolunteerPersonal.VolunteerCallHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Call History" Height="500" Width="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Filter by Call Type:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox ItemsSource="{Binding CallTypeOptions}"
              SelectedItem="{Binding SelectedFilterType, Mode=TwoWay}" Width="150" Margin="0,0,20,0"/>

            <TextBlock Text="Sort by:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox ItemsSource="{Binding SortFieldOptions}"
              SelectedItem="{Binding SelectedSortField, Mode=TwoWay}" Width="150"/>
        </StackPanel>


        <DataGrid ItemsSource="{Binding CallList}" AutoGenerateColumns="False" Grid.Row="1" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Call Type" Binding="{Binding CallTypes}"/>
                <DataGridTextColumn Header="Address" Binding="{Binding Address}"/>
                <DataGridTextColumn Header="Entry Time" Binding="{Binding EntryTimeForTreatment}"/>
                <DataGridTextColumn Header="End Time" Binding="{Binding EndTimeForTreatment}"/>
                <DataGridTextColumn Header="Finish Type" Binding="{Binding FinishCallType}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
