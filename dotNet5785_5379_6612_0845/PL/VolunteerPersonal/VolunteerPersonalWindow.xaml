<Window x:Class="PL.VolunteerPersonal.VolunteerPersonalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Volunteer Details" Height="750" Width="850">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Volunteer Details" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="ID:" Width="120"/>
                <TextBox Text="{Binding CurrentVolunteer.VolunteerId}" Width="200" IsReadOnly="True"/>
            </StackPanel>

     
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Name:" Width="120"/>
                <TextBox Text="{Binding CurrentVolunteer.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Phone:" Width="120"/>
                <TextBox Text="{Binding CurrentVolunteer.PhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Email:" Width="120"/>
                <TextBox Text="{Binding CurrentVolunteer.EmailOfVolunteer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Address:" Width="120"/>
                <TextBox Text="{Binding CurrentVolunteer.AddressVolunteer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Max Distance:" Width="120"/>
                <TextBox Text="{Binding CurrentVolunteer.MaximumDistanceForReceivingCall, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Password:" Width="120"/>
                <PasswordBox Name="PasswordBoxVolunteer" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Distance Type:" Width="120"/>
                <ComboBox ItemsSource="{Binding DistanceTypeCollection}"
                          SelectedItem="{Binding CurrentVolunteer.DistanceType, Mode=TwoWay}" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Active:" Width="120"/>
                <CheckBox IsChecked="{Binding CurrentVolunteer.IsAvailable, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          IsEnabled="{Binding CanChangeActiveStatus}"
                          Checked="ActiveChanged"
                          Unchecked="ActiveChanged"/>
            </StackPanel>

            <Button Content="Choose Call"
                    Width="150"
                    Margin="0,10,0,0"
                    Click="btnChooseCall_Click"
                    IsEnabled="{Binding CanChooseCall}"/>
        </StackPanel>

        <!-- קריאה נוכחית -->
        <GroupBox Header="Current Call" Grid.Row="1" Margin="0,10">
            <StackPanel Margin="5">
                <TextBlock Text="{Binding CurrentCallInfo}" TextWrapping="Wrap"/>
                <Button Content="End Call" Margin="5" Click="btnEndCall_Click" IsEnabled="{Binding IsCallInProgress}"/>
                <Button Content="Cancel Call" Margin="5" Click="btnCancelCall_Click" IsEnabled="{Binding IsCallInProgress}"/>
            </StackPanel>
        </GroupBox>

        <!-- כפתורי תחתית -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0,10">
            <Button Content="Update" Width="100" Click="btnUpdate_Click" Margin="5"/>
            <Button Content="Call History" Width="100" Margin="5" Click="btnHistory_Click"/>
        </StackPanel>
    </Grid>
</Window>
