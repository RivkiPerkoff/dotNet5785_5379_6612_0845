<Window x:Class="PL.Volunteer.VolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:bo="clr-namespace:BL.BO;assembly=BL"

    Title="VolunteerWindow" Height="600" Width="400" >
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <!-- 15 שורות עבור כל שדה + שורה לכפתור -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- VolunteerId (readonly, לכן TextBlock) -->
        <Label Grid.Row="0" Grid.Column="0" Content="Volunteer Id:" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding VolunteerId}" VerticalAlignment="Center"/>

        <!-- Name -->
        <Label Grid.Row="1" Grid.Column="0" Content="Name:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- PhoneNumber -->
        <Label Grid.Row="2" Grid.Column="0" Content="Phone Number:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- EmailOfVolunteer -->
        <Label Grid.Row="3" Grid.Column="0" Content="Email:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding EmailOfVolunteer, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- PasswordVolunteer -->
        <Label Grid.Row="4" Grid.Column="0" Content="Password:" VerticalAlignment="Center"/>
        <PasswordBox Grid.Row="4" Grid.Column="1" PasswordChanged="PasswordBox_PasswordChanged" />

        <!-- AddressVolunteer -->
        <Label Grid.Row="5" Grid.Column="0" Content="Address:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding AddressVolunteer, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- VolunteerLatitude -->
        <Label Grid.Row="6" Grid.Column="0" Content="Latitude:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding VolunteerLatitude, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- VolunteerLongitude -->
        <Label Grid.Row="7" Grid.Column="0" Content="Longitude:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding VolunteerLongitude, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- IsAvailable -->
        <Label Grid.Row="8" Grid.Column="0" Content="Is Available:" VerticalAlignment="Center"/>
        <CheckBox Grid.Row="8" Grid.Column="1" IsChecked="{Binding IsAvailable, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- MaximumDistanceForReceivingCall -->
        <Label Grid.Row="9" Grid.Column="0" Content="Max Distance for Calls:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding MaximumDistanceForReceivingCall, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Role -->
        <Label Grid.Row="10" Grid.Column="0" Content="Role:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="10" Grid.Column="1" SelectedItem="{Binding Role, UpdateSourceTrigger=PropertyChanged}" >
            <ComboBox.ItemsSource>
                <x:Array Type="{x:Type bo:Role}">
                    <bo:Role>Manager</bo:Role>
                    <bo:Role>Volunteer</bo:Role>
                </x:Array>
            </ComboBox.ItemsSource>
        </ComboBox>

        <!-- DistanceType -->
        <Label Grid.Row="11" Grid.Column="0" Content="Distance Type:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="11" Grid.Column="1" SelectedItem="{Binding DistanceType, UpdateSourceTrigger=PropertyChanged}">
            <ComboBox.ItemsSource>
                <x:Array Type="{x:Type bo:DistanceType}">
                    <bo:DistanceType>AirDistance</bo:DistanceType>
                    <bo:DistanceType>RoadDistance</bo:DistanceType>
                    <bo:DistanceType>WalkingDistance</bo:DistanceType>
                </x:Array>
            </ComboBox.ItemsSource>
        </ComboBox>

        <!-- TotalCallsHandled -->
        <Label Grid.Row="12" Grid.Column="0" Content="Total Calls Handled:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="12" Grid.Column="1" Text="{Binding TotalCallsHandled, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- TotalCallsCanceled -->
        <Label Grid.Row="13" Grid.Column="0" Content="Total Calls Canceled:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="13" Grid.Column="1" Text="{Binding TotalCallsCanceled, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- SelectedAndExpiredCalls -->
        <Label Grid.Row="14" Grid.Column="0" Content="Selected and Expired Calls:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="14" Grid.Column="1" Text="{Binding SelectedAndExpiredCalls, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- כפתור הוספה / עדכון -->
        <Button Grid.Row="15" Grid.Column="0" Grid.ColumnSpan="2" Content="Save" Margin="0,10,0,0" Height="30"
                HorizontalAlignment="Stretch" Click="SaveButton_Click"/>
    </Grid>
</Window>
