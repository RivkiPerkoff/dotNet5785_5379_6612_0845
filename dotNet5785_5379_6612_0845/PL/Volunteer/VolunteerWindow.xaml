<Window x:Class="PL.Volunteer.VolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:local="clr-namespace:PL.Volunteer"
        Title="Volunteer" Height="650" Width="500">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="10" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="303*"/>
                    <RowDefinition Height="19*"/>
                    <RowDefinition Height="192*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- שם -->
                <Label Grid.Row="0" Grid.Column="0" Content="Name:" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,244,5,0" Height="26" Width="44"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="5,5,5,5" Grid.RowSpan="3"/>

                <!-- טלפון -->
                <Label Grid.Column="0" Content="Phone Number:" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,244,5,0" Height="26" Width="93"/>
                <TextBox Grid.Column="1" Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Margin="5,5,5,5" Grid.RowSpan="3"/>

                <!-- אימייל -->
                <Label Grid.Column="0" Content="Email:" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,244,5,0" Height="26" Width="41"/>
                <TextBox Grid.Column="1" Text="{Binding EmailOfVolunteer, UpdateSourceTrigger=PropertyChanged}" Margin="5,5,5,5" Grid.RowSpan="3"/>

                <!-- סיסמה -->
                <Label Grid.Column="0" Content="Password:" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,244,5,0" Height="26" Width="62"/>
                <PasswordBox Grid.Column="1" Margin="5,5,5,5" PasswordChanged="PasswordBox_PasswordChanged" Grid.RowSpan="3"/>

                <!-- כתובת -->
                <Label Grid.Column="0" Content="Address:" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,244,5,0" Height="26" Width="55"/>
                <TextBox Grid.Column="1" Text="{Binding AddressVolunteer, UpdateSourceTrigger=PropertyChanged}" Margin="5,5,5,5" Grid.RowSpan="3"/>

                <!-- Latitude -->
                <Label Grid.Column="0" Content="Latitude:" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,244,5,0" Height="26" Width="56"/>
                <TextBox Grid.Column="1" Text="{Binding VolunteerLatitude, UpdateSourceTrigger=PropertyChanged}" Margin="5,5,5,5" Grid.RowSpan="3"/>

                <!-- Longitude -->
                <Label Grid.Column="0" Content="Longitude:" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,244,5,0" Height="26" Width="66"/>
                <TextBox Grid.Column="1" Text="{Binding VolunteerLongitude, UpdateSourceTrigger=PropertyChanged}" Margin="5,5,5,5" Grid.RowSpan="3"/>

                <!-- זמין -->
                <Label Grid.Column="0" Content="Is Available:" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,244,5,0" Height="26" Width="72"/>
                <CheckBox Grid.Column="1" IsChecked="{Binding IsAvailable, UpdateSourceTrigger=PropertyChanged}" Margin="5,5,5,5" Grid.RowSpan="3"/>

                <!-- Maximum Distance -->
                <Label Grid.Column="0" Content="Max Distance:" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,154,41,0" RenderTransformOrigin="0.128,-3.567" Height="26" Width="83"/>
                <TextBox Text="{Binding MaximumDistanceForReceivingCall, UpdateSourceTrigger=PropertyChanged}" Margin="127,20,33,-10" Grid.ColumnSpan="2" Grid.RowSpan="3"/>

                <!-- Role -->
                <Label Grid.Column="0" Content="Role:" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,244,5,0" Height="26" Width="36"/>
                <ComboBox Grid.Column="1" ItemsSource="{Binding Roles}" SelectedItem="{Binding Role}" Margin="202,10,-192,0" Grid.RowSpan="3"/>

                <!-- DistanceType -->
                <Label Grid.Column="0" Content="Distance Type:" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,213,5,0" RenderTransformOrigin="0.152,-2.119" Height="26" Width="86"/>
                <ComboBox ItemsSource="{Binding DistanceTypes}" SelectedItem="{Binding DistanceType}" Margin="-274,5,144,5" Grid.RowSpan="3"/>

            </Grid>
        </ScrollViewer>

        <Button Grid.Row="2" Content="{Binding ButtonText}" Height="40" Width="100" HorizontalAlignment="Center" Margin="10" Click="btnAddUpdate_Click"/>
    </Grid>
</Window>
